pipeline {
  agent {
     label 'node01'
  }
  stages {
    stage('Back-end') {
      agent {
        docker { 
          label 'node01'
          image 'maven:3.8.1-adoptopenjdk-11' 
          }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { 
         label 'node01'
         image 'node:16-alpine' 
         }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
